<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	
  <servlet>
    <servlet-name>CommonService</servlet-name>
    <servlet-class>com.base.action.CommonService</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RouteService</servlet-name>
    <servlet-class>com.base.action.RouteService</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AreaService</servlet-name>
    <servlet-class>com.base.action.AreaService</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserService</servlet-name>
    <servlet-class>com.base.action.UserService</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>NoticeService</servlet-name>
    <servlet-class>com.base.action.NoticeService</servlet-class>
  </servlet> 
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.base.action.login</servlet-class>
  </servlet> 
    <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>com.base.action.logout</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AdService</servlet-name>
    <servlet-class>com.base.action.AdService</servlet-class>
  </servlet>
   <servlet>
    <servlet-name>addAdService</servlet-name>
    <servlet-class>com.base.action.addAdService</servlet-class>
  </servlet> 
  
   <servlet-mapping>
    <servlet-name>AdService</servlet-name>
    <url-pattern>/AdService.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>addAdService</servlet-name>
    <url-pattern>/addAdService.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AreaService</servlet-name>
    <url-pattern>/AreaService.do</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>UserService</servlet-name>
    <url-pattern>/UserService.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>NoticeService</servlet-name>
    <url-pattern>/NoticeService.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout.do</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>CommonService</servlet-name>
    <url-pattern>/CommonService.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RouteService</servlet-name>
    <url-pattern>/RouteService.do</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>home.html</welcome-file>
  </welcome-file-list>
</web-app>
